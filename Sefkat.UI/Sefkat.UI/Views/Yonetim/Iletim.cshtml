@model Sefkat.Entity.Iletim
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <a href="@Url.Action("IletimEkle","Yonetim")" class="btn btn-primary">Yeni Proje</a>
</div>
<table class="table">
    <tr>
        <td>#</td>
        <td>Adı</td>
        <td>Soyadı</td>
        <td>Mail</td>
        <td>Mesaj</td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td><img src="@item.Resim" width="230" height="230" /></td>
            <td>@item.Adi</td>
            <td>@item.Soyadi</td>
            <td>@item.Mail</td>
            <td>@item.Mesaj</td>
            <td>
                <a href="@Url.Action("IletimEkle","Yonetim", new {id = item.ID })" class="btn btn-warning">Düzenle</a>
                <a href="@Url.Action("IletimSil","Yonetim", new {id = item.ID })" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
